<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>

  <!-- LOCAL Leaflet -->
  <link rel="stylesheet" href="leaflet.css"/>
  <script src="leaflet.js"></script>

  <style>
    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
    }

    #map {
      height: 100vh;
      width: 100vw;
    }
  </style>
</head>

<body>

<div id="map"></div>

<script>
  console.log("HTML loaded");
console.log("Leaflet object:", typeof L);
  console.log("Leaflet loading...");

  var map = L.map('map').setView([38.99, -76.89], 14);

  L.tileLayer(
    'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',
    { maxZoom: 19 }
  ).addTo(map);

  var markers = L.layerGroup().addTo(map);

  window.updatePlot = function(latitudes, longitudes, rssi, texts) {

      markers.clearLayers();

      for (let i=0; i<latitudes.length; i++) {

          let strength = Math.min(Math.max(rssi[i], -100), -30);
          let norm = (strength + 100) / 70;
          let color = `rgb(${255*(1-norm)}, ${255*norm}, 0)`;

          L.circleMarker([latitudes[i], longitudes[i]], {
              radius: 8,
              color: color
          }).bindPopup(texts[i]).addTo(markers);
      }

      if(latitudes.length > 0){
          map.setView(
              [latitudes[latitudes.length-1], longitudes[longitudes.length-1]],
              map.getZoom()
          );
      }
  }
</script>

</body>
</html>